        android:text="@string/PStats_Users_BMILbl"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/titleColors"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PStats_WorkoutsCompLbl_TxtView"
        app:layout_constraintTop_toBottomOf="@+id/PStats_WorkoutsCompLbl_TxtView" />

    <TextView
        android:id="@+id/PStats_UsersBMIVal_TxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/PStats_Users_BMIVal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
